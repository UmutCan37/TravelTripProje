@using TravelTripProje.Models.Class
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Blog Listesi</h5>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 120px;">Blog ID</th>
                        <th>Başlık</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Baslik</td>
                            <td>
                                <a href="/Admin/BlogSilme/@item.ID" class="btn btn-danger btn-sm ms-1">
                                    Sil
                                </a>

                            </td>
                            <td>

                                <a href="/Admin/BlogGetir/@item.ID" class="btn btn-warning btn-sm">
                                    Güncelle
                                </a>
                            </td>
                            <td>

                                <a href="/Admin/BlogGetir/@item.ID" class="btn btn-success">
                                    Detay
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        

        <div class="card-footer text-end bg-light">
            <a href="/Admin/YeniBlog/" class="btn btn-success">
                + Yeni Blog Ekle
            </a>
        </div>

    </div>

</div>

